@using UpBeat.Web.Areas.Administration.Models
@model TrackViewModel

<div class="row">
    @using (Html.BeginForm<AdminPanelController>(c => c.AddTrack(null), FormMethod.Post, htmlAttributes: new { @class = "col s12", id = "addition-form" }))
    {
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">account_circle</i>
                @Html.EditorFor(model => model.Name,
               new { htmlattributes = new { @class = "validate", id = "icon-prefix", required = true } })
                <label for="icon_prefix">Name</label>
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "red-text" })
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">today</i>
                @Html.EditorFor(model => model.PreviewUrl,
               new { htmlattributes = new { @class = "validate", id = "icon_date", required = true } })
                <label for="icon_date">Preview Url</label>
                <div>
                    @Html.ValidationMessageFor(m => m.PreviewUrl, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="col s12">
                @Html.DropDownListFor(model => model.AlbumName, Model.AlbumSelectList, new { @class = "validate browser-default", required = true })
                <div>
                    @Html.ValidationMessageFor(m => m.AlbumName, "", new { @class = "red-text" })
                </div>
            </div>
        </div>

        @Html.AntiForgeryToken()
    }
</div>
