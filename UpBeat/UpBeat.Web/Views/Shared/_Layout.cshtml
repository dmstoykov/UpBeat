@using UpBeat.Common.Constants

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UpBeat Inc.</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @Styles.Render("~/Content/materialize")
    @Styles.Render("~/Content/kendo")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            @Html.ActionLink("UpBeat", "Index", "Home", new { area = "" }, new { @class = "brand-logo center" })
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
            <ul class="hide-on-med-and-down">
                <li>@(Html.ActionLink<HomeController>("Home", c => c.Index()))</li>
                <li>@(Html.ActionLink<PlaylistController>("Trending", c => c.All(DataConstants.StartingPageNumber)))</li>
            </ul>
            <ul class="right hide-on-med-and-down">
                @Html.Partial("_LoginPartial")
            </ul>
            <ul class="side-nav" id="mobile-demo">
                <li>@(Html.ActionLink<HomeController>("Home", c => c.Index()))</li>
                <li>@(Html.ActionLink<HomeController>("About", c => c.About()))</li>
                <li>@(Html.ActionLink<PlaylistController>("Trending", c => c.All(DataConstants.StartingPageNumber)))</li>
                <li><hr /></li>
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
    </div>
    <footer class="page-footer">
        <div class="footer-copyright">
            <div class="container">
                <span>Copyright © 2017 UpBeat Inc.All rights reserved.</span>
                <span class="right">Design and Developed by @(Html.ActionLink<HomeController>("UpBeat Inc.", c => c.About()))</span>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/materialize")

    @Html.Kendo().DeferredScripts()
    @RenderSection("scripts", required: false)
</body>
</html>
