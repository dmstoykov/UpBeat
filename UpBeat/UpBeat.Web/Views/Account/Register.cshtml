@model UpBeat.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div class="row center">
    <div class="s12 m12 white-text">
        <h2>@ViewBag.Title.</h2>
    </div>
</div>
<div class="row center black-text">
    <div class="col m8 offset-m2 s12 card-panel">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            <div class="row center">
                <div class="col m8 offset-m2 s12">
                    @Html.AntiForgeryToken()
                    <h4>Create a new account.</h4>
                    <hr />
                </div>
            </div>
            <div class="row center">
                <div class="col m8 offset-m2 s12">
                    @Html.LabelFor(m => m.Email, new { @class = "left" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "validate" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row center">
                <div class="col m8 offset-m2 s12">
                    @Html.LabelFor(m => m.FirstName, new { @class = "left" })
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "validate" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row center">
                <div class="col m8 offset-m2 s12">
                    @Html.LabelFor(m => m.LastName, new { @class = "left" })
                    @Html.TextBoxFor(m => m.LastName, new { @class = "validate" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row center">
                <div class="col m8 offset-m2 s12">
                    @Html.LabelFor(m => m.Password, new { @class = "left" })
                    @Html.PasswordFor(m => m.Password, new { @class = "validate" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row center">
                <div class="col m8 offset-m2 s12">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "left" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "validate" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="row center">
                <div class="col m8 offset-m2 s12">
                    <input type="submit" class="waves-effect waves-light btn" value="Register" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
